<module xmlns="http://jomc.org/model"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jomc.org/model http://www.jomc.org/jomc-model/jomc-1.0.xsd"
        name="${pom.name}"
        version="${pom.version}"
        vendor="${pom.organization.name}"
        modelVersion="1.0">

  <documentation defaultLanguage="en">
    <text language="en"><![CDATA[${pom.description}]]></text>
  </documentation>

  <implementations>
    <!-- ******************************************************************* -->
    <implementation identifier="org.jomc.ri.DefaultObjectManager"
                    class="org.jomc.ri.DefaultObjectManager"
                    name="${pom.name}"
                    version="${pom.version}"
                    vendor="${pom.organization.name}"
                    final="true">

      <documentation defaultLanguage="en">
        <text language="en"><![CDATA[${pom.description}]]></text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@schulte.it"
                createDate="2005-07-25T19:56:45Z"/>

      </authors>
      <specifications>
        <reference identifier="org.jomc.ObjectManager"
                   version="1.0"/>

      </specifications>
    </implementation>

    <!-- ******************************************************************* -->
    <implementation identifier="org.jomc.ri.util.JndiLookup"
                    class="org.jomc.ri.util.JndiLookup"
                    name="${pom.name}"
                    version="${pom.version}"
                    vendor="${pom.organization.name}"
                    final="true">

      <documentation defaultLanguage="en">
        <text language="en"><![CDATA[Naming system lookup support class.]]></text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@schulte.it"
                createDate="2005-07-25T19:56:45Z"/>

      </authors>
      <properties>
        <property name="objectName" type="java.lang.String">
          <documentation defaultLanguage="en">
            <text language="en"><![CDATA[The JNDI name of the object to lookup.]]></text>
          </documentation>
        </property>
        <property name="remoteObject" type="boolean" value="false">
          <documentation defaultLanguage="en">
            <text language="en"><![CDATA[Flag indicating the remote status of the JNDI object. True to narrow any JNDI objects. False to return JNDI objects unchanged.]]></text>
          </documentation>
        </property>
      </properties>
    </implementation>
  </implementations>
</module>
